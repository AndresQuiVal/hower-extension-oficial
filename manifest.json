{
    "name": "Hower - Social Media Assistant",
    "version": "1.2.1",
    "description": "Asistente profesional para la gesti√≥n de prospectos y comunicaciones en redes sociales. Optimiza tu alcance y networking profesional",
    "manifest_version": 3,
    "author": "Andres Quiroz",
    "icons" : {
        "48" : "Hower_logo.png",
        "128" : "Hower_logo.png"
    },
    "action":{
        "default_title": "Hower - Social Media Assistant"
    },
    "permissions": [
        "alarms",
        "debugger",
        "downloads",
        "webRequest",
        "activeTab",
        "storage",
        "cookies",
        "activeTab",
        "scripting",
        "notifications",
        "downloads"
    ],
    "web_accessible_resources": [{
        "resources": ["popup.html", "*.js", "*.css", "*.png"],
        "matches": ["<all_urls>"],
        "extension_ids": ["*"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://i.instagram.com/*",
        "https://scontent*.cdninstagram.com/*",
        "https://*.cdninstagram.com/*",
        "https://instagram.*/*",
        "https://*.instagram.com/*",
        "https://*.fgdl17-1.fna.fbcdn.net/*",
        "https://*.fmex34-1.fna.fbcdn.net/*",
        "https://*.fna.fbcdn.net/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/*"],
            "js": ["content.js"]
        }
    ]
}